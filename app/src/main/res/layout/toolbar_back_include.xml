<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appbar_layout_toolbar"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="#1565c0"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/iv_back_toolbar"
            android:layout_width="48dp"
            android:layout_height="48dp"

            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back_toobar" />

        <TextView
            android:id="@+id/tv_left_title_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_back_toolbar"
            android:text="测试"
            android:maxLength="4"
            android:textColor="@color/color_toolbar_text"
            android:textSize="18sp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/tv_left_title_toolbar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_back_toolbar"
            android:text="测试"

            android:textColor="@color/color_toolbar_text"
            android:textSize="18sp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/tv_title_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@color/color_toolbar_text"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="右文本"
            android:textColor="@color/color_toolbar_text"
            android:textSize="20sp"
            android:visibility="gone"></TextView>

    </RelativeLayout>
</android.support.design.widget.AppBarLayout>