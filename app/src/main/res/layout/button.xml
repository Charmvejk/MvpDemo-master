<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_bottom_tab"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"


    android:gravity="center_vertical"
    android:orientation="horizontal">
    <!-- 底部四个导航按钮 -->

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bnv_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@color/selector_blue"
        app:itemTextColor="@color/selector_blue"
        app:menu="@menu/menu_bottom_navigation"/>
    <LinearLayout
        android:id="@+id/ll_tabs"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout

            android:id="@+id/lin_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#ffffff"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_select_one"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"

                android:src="@mipmap/icon_zy_unselect" />

            <TextView
                android:id="@+id/tv_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_horizontal"
                android:text="资源"
                android:textColor="#cdcdcd"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_three1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#ffffff"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_select_thre1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"

                android:src="@mipmap/icon_main_unselect" />

            <TextView
                android:id="@+id/tv_mthree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_horizontal"
                android:text="首页"
                android:textColor="#cdcdcd"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="#ffffff"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_select_two"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_gravity="center_horizontal"
                android:src="@mipmap/tab_message_item_normal" />

            <TextView
                android:id="@+id/tv_my"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="朋友圈" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_four"
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_select_three"

                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_gravity="center_horizontal"
                android:src="@mipmap/icon_tongji_unselect" />

            <TextView
                android:id="@+id/tv_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#cdcdcd"

                android:gravity="center_horizontal"
                android:text="统计" />
        </LinearLayout>
    </LinearLayout>
    <!-- 导航和视图的分割线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@id/ll_tabs"
        android:background="#0eefff" />

</LinearLayout>
