<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_content1"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:stateListAnimator="@drawable/selector_elevation"
            android:visibility="visible"
            app:cardBackgroundColor="#fc8675"
            app:cardCornerRadius="6dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            card_view:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                >


                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:text="汇聚总量"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:id="@+id/iv_cover1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="16dp"


                    android:layout_marginRight="10dp"
                    android:contentDescription="@null"

                    android:src="@drawable/icon_fw" />

                <TextView
                    android:id="@+id/tv_content1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_cover1"
                    android:layout_marginLeft="8dp"

                    android:layout_marginRight="16dp"
                    android:lineSpacingMultiplier="1.2"
                    android:text="121212"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14" />

                <Button
                    android:id="@+id/btn_share1"
                    style="?borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_content1"
                    android:background="#fc8675"
                    android:text="SHARE"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    android:visibility="gone" />

                <Button
                    style="?borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/btn_share1"
                    android:layout_toRightOf="@id/btn_share1"
                    android:background="#fc8675"
                    android:text="EXPLORE"
                    android:textColor="#FF9800"
                    android:textSize="@dimen/sp_16"
                    android:visibility="gone" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>
