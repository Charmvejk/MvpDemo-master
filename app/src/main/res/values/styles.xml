<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
         <item name="android:listDivider">@drawable/divider</item>
    </style>


    <!--登录输入框浮动标签-->
    <style name="login_hintAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tab_login_press</item>
    </style>
    <!--登录忘记密码 注册按钮 字体-->
    <style name="login_text_color">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_login_text</item>
    </style>

    <style name="MaterialRatingBar24dp">
        <item name="android:minHeight">14dp</item>
        <item name="android:maxHeight">14dp</item>
    </style>
    <style name="popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_gone</item>
    </style>
    <style name="MainDrawerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMainDrawerPrimary</item>
        <item name="colorPrimaryDark">@color/colorMainDrawerPrimaryDark</item>
        <item name="colorAccent">@color/colorMainDrawerAccent</item>
    </style>
    <style name="LauncherTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
